<%- include('layouts/navigation') %> <% if(isAuthorized){ %>
<div class="profile__conatiner">
  <div class="profile__img__container column center">
    <div>
      <img class="profile__img" src="/<%= data.profile %>" alt="" />
    </div>
    <div>
      <p>Edit Profile</p>
    </div>
    <div class="profile__form__content">
      <form action="/profile" method="POST">
        <div class="input__grp row">
          <div class="input__div">
            <input
              type="text"
              class="input"
              value="<%= data.firstName %>"
              placeholder="First Name"
              required
            />
          </div>
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="Last Name"
              value="<%= data.lastName %>"
              required
            />
          </div>
        </div>
        <div class="input__grp row">
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="Email ID"
              value="<%= data.email %>"
              required
            />
          </div>
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="Contact No"
              value="<%= data.phone__no %>"
              required
            />
          </div>
        </div>
        <div class="input__grp row">
          <div class="input__div">
            <input
              type="date"
              class="input"
              placeholder="D.O.B"
              value="<%= data.dob %>"
              required
            />
          </div>
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="Gender"
              value="<%= data.gender %>"
              required
            />
          </div>
        </div>
        <div class="input__grp row">
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="State"
              value="<%= data.state %>"
              required
            />
          </div>
          <div class="input__div">
            <input
              type="text"
              class="input"
              placeholder="City"
              value="<%= data.city %>"
              required
            />
          </div>
        </div>
        <div class="input__grp row">
          <div class="input__div">
            <input
              type="text"
              class="input"
              value="<%= data.linkedin %>"
              placeholder="Linkedin Profile Link"
            />
          </div>
          <div class="input__div">
            <input
              type="text"
              class="input"
              value="<%= data.description %>"
              placeholder="About Your Self"
              required
            />
          </div>
        </div>
        <div class="center">
          <button class="profile__btn" type="submit">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% } else { %> You are not authorized to view this page <% } %>
<style>
  .nav__link__li a {
    color: var(--primary-bg-color) !important;
  }
  .profile__img__container {
    width: 100%;
    padding: 100px 0;
  }
  .profile__img {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    object-position: center;
    border: 4px solid var(--secondary-color);
  }
  .profile__form__content {
    width: 100%;
    padding: 20px 50px;
  }

  .input__grp {
    margin-bottom: 50px;
    justify-content: space-between;
  }
  .input__div {
    flex: none;
    width: 45% !important;
    height: 50px !important;
    border: 1px solid var(--primary-bg-color);
  }
  .profile__btn {
    width: 50%;
    height: 50px;
    border: none;
    font-size: 1.2rem;
    font-weight: 900;
    border-radius: 10px;
    background-color: var(--secondary-color);
  }
</style>
