<link rel="stylesheet" href="/auth.css" />
<div class="login__modal modal__closer center" id="login__modal">
  <div class="login__container" id="login__content__container">
    <div class="login__content">
      <div class="login__heading">
        <h1 class="">Login To Your Volunteer Account</h1>
      </div>
      <div class="login__form__content">
        <form action="" method="post" id="login__form">
          <div class="input__lab">Your Email</div>
          <div class="input__div login__input">
            <input
              class="input"
              type="email"
              id="login__email"
              placeholder="Enter Your Email ID"
              required
            />
          </div>
          <br />
          <div class="input__lab">User Type</div>
          <div class="input__div">
            <select class="input" name="user" id="login__user">
              <option value="user">Volunteer</option>
              <option value="ngo">NGO</option>
            </select>
          </div>
          <br />
          <div class="input__lab">Your Password</div>
          <div class="input__div login__input">
            <input
              class="input"
              type="password"
              id="login__password"
              placeholder="Enter Your Password"
              required
            />
          </div>
          <div class="login__others row">
            <div>
              <input type="checkbox" name="remember" id="remember" />
              Remember Me
            </div>
            <a href="">Forgot Password</a>
          </div>
          <button class="login__btn">Login</button>
        </form>
        <div class="other__options column center">
          <div class="row">
            <p>Don't Have An Account? <a class="link"> Signup</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/login.js" defer></script>
