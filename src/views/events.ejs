<%- include('layouts/navigation') %>
<div class="events__option row">
  <div>
    <h1>Events</h1>
  </div>
  <div>
    <% if(isAuthorized) { %>
    <div>
      <% if(details.whoIS === 'ngo') { %>
      <a href="/create-event">Create Event</a>
      <% } else{ %>
      <a href="/upcoming-events">Upcoming Events</a>
      <% } %>
    </div>
    <%}%>
  </div>
</div>
<div class="events__card__container column center">
  <div class="events__card__item">
    <% for (let i = 0; i < events.length; i++) { %>
    <div class="events__card row">
      <div class="events__inner__card row">
        <div class="events__card__img__container">
          <img
            class="events__card__img"
            src="<%= events[i].eventImage %>"
            alt=""
          />
        </div>
        <div class="events__card__details">
          <div>
            <h2><%= events[i].eventName %></h2>
            <p class="events__description"><%= events[i].eventDescription %></p>
          </div>
          <div class="events__other__details row">
            <p>
              Date: <%= events[i].eventDate.getDate() %>/<%=
              events[i].eventDate.getMonth() %>/<%=
              events[i].eventDate.getFullYear() %>
            </p>
            <p>Time: <%= events[i].eventTime %></p>
            <p>Location: <%= events[i].eventLocation %></p>
            <p>Host: <%= events[i].eventOrganizer %></p>
          </div>
        </div>
      </div>
      <div class="events__card__btn__grp column">
        <a href="/events/donate/<%= events[i]._id %>">
          <button class="events__card__btn">View Details</button>
        </a>
        <a href="/events/donate/<%= events[i]._id %>">
          <button class="events__card__btn">Donate</button>
        </a>
        <a href="/events/suscribe/<%= events[i]._id %>">
          <button class="events__card__btn">Volunteer</button>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</div>
<style>
  .nav__link__li a {
    color: var(--primary-bg-color) !important;
  }
  .events__option {
    padding: 10px 50px;
    justify-content: space-between;
  }
  .events__card__item {
    width: 95%;
  }
  .events__card {
    width: 100%;
    height: 190px;
    margin: 20px 0;
  }
  .events__inner__card {
    flex: 1;
    padding: 20px;
    border-radius: 10px;
    border: 1px solid var(--primary-bg-color);
  }
  .events__card__img__container {
    width: 200px;
    height: 150px;
    overflow: hidden;
  }
  .events__card__details {
    flex: 1;
    padding: 0 20px;
    position: relative;
  }
  .events__description {
    font-size: 1.2rem;
    margin-top: 10px;
  }
  .events__other__details {
    position: absolute;
    bottom: 0;
    flex: 1;
    left: 0;
    right: 0;
    display: flex;
    padding-left: 20px;
    justify-content: space-between;
  }
  .events__card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .events__card__btn__grp {
    padding: 0 30px;
    justify-content: space-around;
  }
  .events__card__btn {
    width: 200px;
    height: 40px;
    border: none;
    gap: 2;
    border-radius: 10px;
    font-size: 1.2rem;
    background-color: var(--secondary-color);
  }
</style>
