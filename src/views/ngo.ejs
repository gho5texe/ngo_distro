<%- include('layouts/navigation') %>
<div class="ngo__container">
  <div class="ngo__item row">
    <% for(let i = 0; i < ngos.length; i++) { %>
    <div class="ngo__card">
      <div class="ngo__card__img__container">
        <img class="ngo__card__img" src="<%= ngos[i].profile %>" alt="" />
      </div>
      <div class="ngo__card__details">
        <div>
          <h3><%= ngos[i].firstName %> <%= ngos[i].lastName %></h3>
        </div>
        <div class="ngo__details row"><%= ngos[i].city %></div>
        <a href="/details/<%= ngos[i]._id%>"
          ><button class="detailsBtn">View Details</button></a
        >
      </div>
    </div>
    <% } %>
  </div>
  <style>
    .nav__link__li a {
      color: var(--primary-bg-color) !important;
    }
    .ngo__item {
      flex-wrap: wrap;
      justify-content: space-between;
    }
    .ngo__card {
      width: 350px;
      height: fit-content;
      margin: 10px 20px;
      border: 1px solid var(--primary-bg-color);
    }
    .ngo__card__img__container {
      width: 100%;
      height: 200px;
      overflow: hidden;
    }
    .ngo__card__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .ngo__card__details {
      padding: 10px;
    }
    .ngo__details {
      padding-top: 10px;
    }
    .detailsBtn {
      width: 100%;
      padding: 10px;
      font-size: 1.2rem;
      border: none;
      margin-top: 20px;
      background-color: var(--secondary-color);
    }
  </style>
</div>
